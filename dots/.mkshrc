# Functions {{{
function pidrunning() {
  ps -p $1 >/dev/null
}

function 15() {
  pid=$1
  for signal in 15 2 1 9; do
    cmd="kill -$signal $pid"
    echo $cmd
    eval $cmd
    for i in $(seq 20); do
      if ! (pidrunning $pid); then
        echo "pid $pid no longer exists"
        return 0
      fi
      sleep 0.1
    done
  done
  if (pidrunning $pid); then
    echo "pid $pid still exists"
  fi
}

gitidentity() {
  gitusername=$1
  gitemail=$2
  gitsshkey=$3
  if [[ ! "$gitusername" = "" && ! "$gitemail" = "" ]]; then
    git config --global user.name "$gitusername"
    git config --global user.email "$gitemail"
    if [[ ! "$gitsshkey" == "" && -e "$gitsshkey" ]]; then
      ssh-add -D
      ssh-add "$gitsshkey"
    fi
  else
    echo "Usage: gitidentify <user> <email> (/path/to/ssh/key)"
  fi
}

# usage: upload <IP ADDRESS> <LOCAL PATH> <REMOTE PATH>
function upload() {
  rsync --progress -avhLe ssh "$2" $1:"$3"
}

# usage: download <IP ADDRESS> <REMOTE PATH> <LOCAL PATH>
function download() {
  rsync --progress --rsync-path="sudo rsync" -avhLe ssh $1:"$2" "$3"
}
